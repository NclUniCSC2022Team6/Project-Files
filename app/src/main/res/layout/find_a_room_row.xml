<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <!--Drawable without rounded edges for this class as the cardview provides it.-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/roundedbuttonsearch"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/roomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="Tutor room info should go here"
            android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/getDirectionsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:background="@android:color/transparent"
                android:text="@string/get_directions"
                android:textColor="@android:color/holo_orange_light"
                android:paddingBottom="6dp"
                android:shadowColor="#000000"
                android:shadowDx="0.9"
                android:shadowDy="0.7"
                android:shadowRadius="1.6"/>

            <Button
                android:id="@+id/showOnMapBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                android:background="@android:color/transparent"
                android:text="@string/show_on_map"
                android:textColor="@android:color/holo_orange_light"
                android:paddingBottom="6dp"
                android:shadowColor="#000000"
                android:shadowDx="0.9"
                android:shadowDy="0.7"
                android:shadowRadius="1.6"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>